<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
       <servlet-name>LoginServlet</servlet-name>
       <servlet-class>LoginServlet</servlet-class>
   </servlet>
        <servlet-mapping>
            <servlet-name>LoginServlet</servlet-name>
            <url-pattern>/LoginServlet</url-pattern>
        </servlet-mapping>
    
    <servlet>
        <servlet-name>ProductAddServlet</servlet-name>
        <servlet-class>ProductAddServlet</servlet-class>
    </servlet>
        <servlet-mapping>
            <servlet-name>ProductAddServlet</servlet-name>
            <url-pattern>/ProductAddServlet</url-pattern>
        </servlet-mapping>

    <servlet>
        <servlet-name>DelProductServlet</servlet-name>
        <servlet-class>DelProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelProductServlet</servlet-name>
        <url-pattern>/DelProductServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdatePersonalInfoServlet</servlet-name>
        <servlet-class>UpdatePersonalInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePersonalInfoServlet</servlet-name>
        <url-pattern>/UpdatePersonalInfoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ImageDisplayServlet</servlet-name>
        <servlet-class>ImageDisplayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ImageDisplayServlet</servlet-name>
        <url-pattern>/ImageDisplayServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductDisplayServlet</servlet-name>
        <servlet-class>ProductDisplayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductDisplayServlet</servlet-name>
        <url-pattern>/ProductDisplayServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/RegistrationServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SellerImageDisplayServlet</servlet-name>
        <servlet-class>SellerImageDisplayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SellerImageDisplayServlet</servlet-name>
        <url-pattern>/SellerImageDisplayServlet</url-pattern>
    </servlet-mapping>

        <filter>
            <filter-name>HTMLFilter</filter-name>
            <filter-class>HTMLFilter</filter-class>
        </filter>
            <filter-mapping>
                <filter-name>HTMLFilter</filter-name>
                <url-pattern>/ProductAddServlet</url-pattern>
            </filter-mapping>

</web-app>